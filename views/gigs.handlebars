<section id="gigs" class="container">
    <h1>All Gigs</h1>
    {{#each gigs}}
        <div class="gig">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <ul> 
                <li>Budget: {{budget}}</li>
                <li><a href="mailto:{{contact_email}}" class="btn btn-reverse">Email</a></li>
            </ul>
            <div class="tech">
                <small>Technologies needed: <span>{{technologies}}</span></small>
            </div>
        </div>
    {{else}}
        <p>No gigs available! </p>
    {{/each}}
</section>
